<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPlayerHero"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_omniknight"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvHeroLevel"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#63000000"
            android:fontFamily="@font/sfprosemibold"
            android:gravity="end"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:fontFamily="@font/sfprosemibold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Marseille"
            android:textColor="@color/text_primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPlayerKda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sfprosemibold"
            android:gravity="center"
            android:text="6 / 8 / 22"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgItem0"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgItem1"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgItem2"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgItem3"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgItem4"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgItem5"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>