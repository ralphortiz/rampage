<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlDetailsExpanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLastHits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="Last Hits: 278"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvDenies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="Denies: 134"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvHeroDmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="Hero Dmg: 11.9k"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="GPM: 199"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvXpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="XPM: 356"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvNet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold"
            android:text="Net: 24.5k"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackpack0"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgBackpack1"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgBackpack2"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:layout_marginEnd="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

            <ImageView
                android:id="@+id/imgNeutral"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lotus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvObserverWards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/sfprosemibold"
                android:text="x 22"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_eye"
                app:drawableTint="#B59C48" />

            <TextView
                android:id="@+id/tvSentryWards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="@font/sfprosemibold"
                android:text="x 22"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_eye"
                app:drawableTint="#209FB9" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>